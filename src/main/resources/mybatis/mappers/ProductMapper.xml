<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nc13.mappers.ProductMapper">
    <select id="selectAll" resultType="productDTO">
        SELECT * FROM product
    </select>

    <select id="selectOne" parameterType="int" resultType="productDTO">
        SELECT * FROM product WHERE product.id = #{id}
    </select>

    <insert id="insert" parameterType="productDTO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product(name, details, price, writer_id)
        VALUES (#{name}, #{details}, #{price}, #{writerId})
    </insert>

    <update id="update" parameterType="productDTO">
        UPDATE product
        SET name = #{name},
            details = #{details},
            price = #{price},
            stock = #{stock}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM product
        WHERE product.id = #{id}
    </delete>
</mapper>
